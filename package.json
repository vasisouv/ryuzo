{
  "name": "@vasisouv/ryuzo",
  "private": false,
  "version": "0.0.3",
  "description": "A set of reusable components for Vue 3 based on Tailwind CSS",
  "keywords": [
    "components",
    "vue3",
    "component library",
    "ui kit",
    "tailwind"
  ],
  "license": "MIT",
  "author": "Vasilis Souvatzis",
  "repository": {
    "type": "git",
    "url": "https://github.com/vasisouv/ryuzo"
  },
  "main": "./dist/index.cjs.js",
  "module": "./dist/index.esm.js",
  "types": "./dist/types/index.d.ts",
  "unpkg": "./dist/index.umd.js",
  "jsdelivr": "./dist/index.umd.js",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js"
    }
  },
  "files": [
    "dist"
  ],
  "bugs": "https://github.com/vasisouv/ryuzo/issues",
  "scripts": {
    "dev": "histoire dev",
    "dev:vite": "vite --mode dev",
    "build": "vue-tsc --declaration --emitDeclarationOnly && vite build --mode=prod",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "pnpm clean:coverage && vitest --coverage --mode test"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "peerDependencies": {
    "@vue/composition-api": "^1.4.9",
    "vue": ">=3.0.0"
  },
  "peerDependenciesMeta": {
    "@vue/composition-api": {
      "optional": true
    }
  },
  "devDependencies": {
    "@histoire/plugin-vue": "^0.11.0",
    "@types/node": "^17.0.21",
    "@vitejs/plugin-vue": "^2.2.0",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^11.0.2",
    "@vue/tsconfig": "^0.1.3",
    "autoprefixer": "^10.4.12",
    "c8": "^7.11.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.11.0",
    "eslint-plugin-vue": "^9.5.1",
    "happy-dom": "^2.49.0",
    "histoire": "^0.11.0",
    "postcss": "^8.4.17",
    "prettier": "^2.7.1",
    "tailwindcss": "^3.1.8",
    "typescript": "^4.5.4",
    "vite": "^2.8.0",
    "vitest": "^0.7.6",
    "vue": "^3.2.31",
    "vue-router": "^4.1.5",
    "vue-tsc": "^0.40.13"
  }
}
